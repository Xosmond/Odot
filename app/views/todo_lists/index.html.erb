
<div>
  <%= render 'info' %>
  <h1>Mis Listas</h1>
<div class="col-xs-9">
  <% @todo_lists.each do |todo_list| %>
    <div onclick="location.href='<%= todo_list_path(todo_list)%>';" style="cursor: pointer;" id="<%=dom_id(todo_list)%>" class="col-xs-3 well lista">
      <div class="info">
        <strong><%= todo_list.titulo %></strong>
        <p>
          <% if todo_list.descripcion.length >47%>
              <%= todo_list.descripcion[0,47]+ " ..." %>
          <%else%>
              <%= todo_list.descripcion %> 
          <%end%>
        </p>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Nueva lista', new_todo_list_path, class:"btn btn-default btn-lg" %>
</div>