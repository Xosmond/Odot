<div class="col-xs-12" ><%= render 'info' %></div>

<div class="col-xs-12 encabezado">
		<h1><%= @todo_list.titulo %></h1>
		<p><strong><%= @todo_list.descripcion %></strong></p>
			<p><%= link_to 'Editar lista', edit_todo_list_path(@todo_list) %> |
				<%= link_to 'Eliminar lista', @todo_list, method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar esta lista?' } %></p>
</div>
<div  class="col-xs-12">
	<div style="float:right">
		<%= link_to 'Nueva Tarea', new_todo_list_todo_item_path(@todo_list.id),class:"btn btn-default" %>
	</div>
</div>
<div class="col-xs-12">
<table  class="table">
	<thead>
	    <tr>
	    	<th style="width:20%;"><h3>Fecha</h3></th>
	      	<th style="width:60%;"><h3>Contenido</h3></th>
	      	<th style="width:20%;"></th>
	    </tr>
	</thead>
	<tbody>
	    <%@todo_list.todo_items.each do |item| %>
	    <tr id= "<%=dom_id(item)%>">
	        <td><p><%= item.created_at %></p> </td>
	        <td><p><%= item.contenido %></p>  </td> 
	     	<td ><p><%= link_to 'Ed', edit_todo_list_todo_item_path(@todo_list,item)%> | <%= link_to 'El',todo_list_todo_item_path(@todo_list,item), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar esta tarea'}%> | 
	     	<%if item.completado_en.nil? %>
	     	<%= link_to 'C',todo_list_todo_item_complete_path(@todo_list,item), method: :patch%>
	     	<%else%>
	     		Co
	     	<%end%></p> </td>
	     </tr>
		<%end%> 
	</tbody>
</table>
</div>

